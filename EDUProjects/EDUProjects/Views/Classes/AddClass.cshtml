@model EDUProjects.Models.ClassModel.AddClassViewModel
@{
    ViewData["Title"] = "AddClass";
}

    <form asp-action="AddClass" method="post">

        <div class="row">
            <div class="col-2">
                Subject Title
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Subject_Title" />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Description
            </div>
            <div class="col-10">
                <textarea class="form-control"
                          asp-for="Description">
    
            </textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="submit" class="btn btn-secondary">Save</button>
            </div>
        </div>
    </form>
