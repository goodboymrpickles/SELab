@model EDUProjects.Models.ClassModel.GetAllClassesViewModel
@{
    ViewData["Title"] = "Classes View";
}

<h1>Classes List</h1>

<br />

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" /></p>
}
<a href='@Url.Action("AddClass", "Classes")'>Add class</a>
<table class="table" BORDERCOLOR=#c99797>
    <thead>
        <tr>
            <th>
                @Html.ActionLink(@Html.DisplayName("Class"), "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayName("Desciption"), "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                Delete class
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Classes)
        {
        <tr>
            
            <td>
                @Html.DisplayFor(model => item.SubjectTitle)
            </td>

            <td>
                @Html.DisplayFor(model => item.Description)
            </td>
            
            <td>
                <a asp-action="DeleteClass" asp-route-id="@item.Id">Delete</a>
                @*<a asp-action="UpdateClass" asp-route-id="@item.TripId">Update</a>*@
            </td>
        </tr>   
        }
    </tbody>
</table>