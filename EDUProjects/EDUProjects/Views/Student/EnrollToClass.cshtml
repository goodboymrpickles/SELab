@model EDUProjects.Models.StudentModel.EnrollViewModel
@{
    ViewData["Title"] = "EnrollToClass";
}

    <form asp-action="EnrollToClass" method="post">

        <div class="row">
            <div class="col-2">
                Class Name
            </div>
            <div class="col-10">
                <textarea class="form-control"
                          asp-for="className"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                Student Name
            </div>
            <div class="col-10">
                <textarea class="form-control"
                          asp-for="studentName"></textarea>
            </div>
        </div>


        <div class="row">
            <div class="col-10">
                <div class="col-2">
                    <button type="submit" class="btn btn-secondary">Add To Class</button>
                </div>
            </div>
        </div>

    </form>