@page
@model RegisterModel
@{
    ViewData["Title"] = "_TeacherRegisterPartial";
}



<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" /><p>Confirm email</p>
                <input asp-for="Input.EmailStudent" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullNameStudent">Full Name</label>
                <input asp-for="Input.FullNameStudent" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthDateStudent"> Birth Date</label>
                <input asp-for="Input.BirthDateStudent" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.University"> University</label>
                <input asp-for="Input.University" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Section"> Section</label>
                <input asp-for="Input.Section" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.AddressStudent"> Address</label>
                <input asp-for="Input.AddressStudent" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Phone_Number">Phone number</label>
                <input asp-for="Input.Phone_Number" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
